<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | SharePets</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
